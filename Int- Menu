package Interfaz;

import Dominio.Jugadores;
import java.util.Scanner;
import Dominio.Tablero;
import Dominio.Auto;

public class Menu {

    private static Scanner scanner = new Scanner(System.in);

    public void principalMenu() {
        boolean salir = false;
        while(!salir) {
            mostrarMenu();
            int opcion = scanner.nextInt();
            if (opcion == 1) {
            registrarJugador();
            principalMenu();
            } else if (opcion == 2) {
            configurarTablero();
            principalMenu();
            }
            else if (opcion == 3) {
            jugar();
           
            }
            else if (opcion == 4) {
            
            }
            else if (opcion == 5) {
            
            }
            else if (opcion == 6) {
                System.out.println("------ Gracias por jugar ------");
                salir = true;
            }
        }
        
        
//        int opcion;
//        do {
//            mostrarMenu();
//            opcion = scanner.nextInt();
//            if (opcion == 1) {
//                registrarJugador();
//                
